{
  "compilerOptions": {
    "module": "commonjs",
    // "types": ["node"],
    "jsx": "react",
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@api/*": ["services/api/*"],
      "@frontend/*": ["services/frontend/*"],
      "@server/*": ["services/server/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ]
  // "exclude": [
  //   "src/**/bundles"
  // ]
}
